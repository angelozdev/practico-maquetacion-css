@import url('./font/flaticon.css');
@import url('https://fonts.googleapis.com/css?family=Josefin+Sans:400,400i,500,500i,600,600i,700,700i&display=swap');

$color-primary = #48cfad
$color-secondary = #434a54

*
  box-sizing: border-box
  font-family: 'Josefin Sans', sans-serif;

body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  

a
  text-decoration none
  display inline
  color black

header 
  width 100%
  height 140px
  display grid
  grid-template-rows: 50px 90px

  .&-icons-container
    width 100%
    height 100%
    display: flex
    justify-content: flex-end
    background-color: $color-primary

    .icons
      width 300px
      margin-right: 50px
      height auto
      display: flex
      justify-content: space-between
      align-items: center

      a  
        color white

nav 
  width 100%
  height 90px
  display grid
  grid-template-columns: 1fr 1fr 1fr
  justify-content: space-between
  justify-items: center
  align-items: center

  .&__logo-container
    height 90px
    
    img 
      height: 100%
  
  .&__link-container
    grid-column 3 / span 1
    a
      color white
      font-size: 1.3em
      text-decoration: underline


main
  background-image: url('../assets/Cover.png')
  height calc(100vh - 50px)
  width 100%
  margin-top -90px
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  display: grid
  justify-items: center
  align-items: center

  div
    width: 60%
    display: flex
    flex-direction: column
    .main__title
      text-align: center
      color white
      font-size: 3em
      letter-spacing: 5px
    .main__button
      justify-self: center
      margin 10px auto
      padding 10px
      background-color: $color-primary
      border none 
      outline none
      cursor pointer
      font-size: 1.5em
      text-transform: uppercase